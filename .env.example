# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require&connect_timeout=30"

# OpenRouter (for Claude API and embeddings)
OPENROUTER_API_KEY="sk-or-v1-..."

# NextAuth (required for authentication)
AUTH_SECRET="generate-with-openssl-rand-base64-32"
AUTH_TRUST_HOST="true"

# Google OAuth - create at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="GOCSPX-..."

# Admin Password (optional - allows admin login)
ADMIN_PASSWORD="YourSecureAdminPassword"
# Admin Email - only this email can use admin password login
ADMIN_EMAIL="admin@example.com"

# Production only - set to your deployed URL
# AUTH_URL="https://your-app.onrender.com"
